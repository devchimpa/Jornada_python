import os
import shutil

print("Este foi meu primeiro programa utilizando as bibliotecas do sistema: os e shutil")

arquivos_origem=input(" Insira o diretório onde está o arquivo: ")

nome_arquivo_final=input("Insira o nome do arquivo final: ")

arquivos_destino="/home/backups/"+nome_arquivo_final

print("Arquivo movido de: " + arquivos_origem + " para " + arquivos_destino)
shutil.copyfile(arquivos_origem, arquivos_destino)
